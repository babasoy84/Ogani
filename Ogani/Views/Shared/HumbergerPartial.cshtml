<div class="humberger__menu__wrapper">
    <div class="humberger__menu__logo">
        <a href="#"><img src="~/assets/images/logo.png" alt=""></a>
    </div>
    <div class="humberger__menu__cart">
        <ul>
            <li><a href="#"><i class="fa fa-heart"></i></a></li>
            <li><a href="#"><i class="fa fa-shopping-bag"></i></a></li>
        </ul>
        @*<div class="header__cart__price">item: <span>$150.00</span></div>*@
    </div>
    <div class="humberger__menu__widget">
        <div class="header__top__right__language">
            <img src="~/assets/images/language.png" alt="">
            <div>English</div>
            <span class="arrow_carrot-down"></span>
            <ul>
                <li><a href="#">Spanis</a></li>
                <li><a href="#">English</a></li>
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="header__top__right__auth">
                <a><i class="fa fa-user-circle-o"></i> @User.Identity.Name</a>
            </div>
            <div class="header__top__right__auth" style="margin-left: 20px;">
                <a asp-action="Logout" asp-controller="Account"><i class="fa fa-sign-out"></i> Logout</a>
            </div>
        }
        else
        {
            <div class="header__top__right__auth">
                <a asp-action="Login" asp-controller="Account"><i class="fa fa-user"></i> Login</a>
            </div>
        }
    </div>
