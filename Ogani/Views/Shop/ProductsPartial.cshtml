@model IPagedList<ShopViewModel>

<div class="filter__item">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="filter__sort">
                <span>Sort By</span>
                <select id="sortSelect" name="sortOption">
                    <option value="1" selected="@((int)ViewBag.SortOption == 1)">Low to High</option>
                    <option value="2" selected="@((int)ViewBag.SortOption == 2)">High to Low</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4 col-md-4">
            <div class="filter__found">
                <h6><span id="foundProductsCount">@ViewBag.FoundProductsCount</span> Products found</h6>
            </div>
        </div>
        <div class="col-lg-4 col-md-3">
            <div class="filter__option">
                <span class="icon_grid-2x2"></span>
                <span class="icon_ul"></span>
            </div>
        </div>
    </div>
</div>

<div id="productsContainer">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="product__item">
                    <div class="product__item__pic set-bg">
                        <img src="@product.ImageUrl" />
                        <ul class="product__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a id="@product.Id" class="addOrder"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="product__item__text">
                        <h6><a href="#">@product.Name</a></h6>
                        <h5>$@product.Price</h5>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (ViewBag.PageCount > 1)
    {
        <div class="product__pagination">
            @*@if (ViewBag.PageNumber > 1)
        {
        <a id="leftPaginationButton" value="@(ViewBag.PageNumber - 1)"><i class="fa fa-long-arrow-left"></i></a>
        }*@
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                if (ViewBag.PageNumber == i)
                {
                    <a id="paginationButton" value="@i" style="background: #7fad39; border-color: #7fad39; color: #ffffff;">@i</a>
                }
                else
                {
                    <a id="paginationButton">@i</a>
                }

            }
            @*@if (ViewBag.PageNumber < ViewBag.PageCount)
        {
        <a id="rightPaginationButton" value="@(ViewBag.PageNumber + 1)"><i class="fa fa-long-arrow-right"></i></a>
        }*@
        </div>
    }
</div>