@model RegisterViewModel

@{
	Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>Ogani - Register</title>
	<!--favicon-->
	<link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">
	<!-- Bootstrap core CSS-->
	<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
	<!-- animate CSS-->
	<link href="~/assets/css/animate.css" rel="stylesheet" type="text/css" />
	<!-- Icons CSS-->
	<link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
	<!-- Custom Style-->
	<link href="~/assets/css/app-style.css" rel="stylesheet" />

</head>

<body class="bg-theme bg-theme1">

	<!-- Start wrapper-->
	<div id="wrapper">

		<div class="card card-authentication1 mx-auto my-4">
			<div class="card-body">
				<div class="card-content p-2">
					<div class="text-center">
						<img src="~/assets/images/logo-icon.png" alt="logo icon">
					</div>
					<div class="card-title text-uppercase text-center py-3">Sign Up</div>
					<form asp-action="Register" asp-controller="Account" method="post">
						<div class="form-group">
							<label class="sr-only">Name</label>
							<div class="position-relative has-icon-right">
								<input asp-for="Name" type="text" id="exampleInputName" class="form-control input-shadow" placeholder="Enter Your Name">
							</div>
							<span style="color: red;" asp-validation-for="Name"/>
						</div>
						<div class="form-group">
							<label class="sr-only">Surname</label>
							<div class="position-relative has-icon-right">
								<input asp-for="Surname" type="text" id="exampleInputName" class="form-control input-shadow" placeholder="Enter Your Surname">
							</div>
							<span style="color: red;" asp-validation-for="Surname" />
						</div>
						<div class="form-group">
							<label class="sr-only">Email</label>
							<div class="position-relative has-icon-right">
								<input asp-for="Email" type="text" id="exampleInputEmailId" class="form-control input-shadow" placeholder="Enter Your Email">
							</div>
							<span style="color: red;" asp-validation-for="Email" />
						</div>
						<div class="form-group">
							<label class="sr-only">Username</label>
							<div class="position-relative has-icon-right">
								<input asp-for="Username" type="text" id="exampleInputName" class="form-control input-shadow" placeholder="Enter Your Username">
							</div>
							<span style="color: red;" asp-validation-for="Username" />
						</div>
						<div class="form-group">
							<label class="sr-only">Password</label>
							<div class="position-relative has-icon-right">
								<input asp-for="Password" type="password" id="exampleInputPassword" class="form-control input-shadow" placeholder="Choose Password">
							</div>
							<span style="color: red;" asp-validation-for="Password" />
						</div>
						<div class="form-group">
							<label class="sr-only">Confirm Password</label>
							<div class="position-relative has-icon-right">
								<input asp-for="ConfirmPassword" type="password" id="exampleInputPassword" class="form-control input-shadow" placeholder="Confirm Password">
							</div>
							<span style="color: red;" asp-validation-for="ConfirmPassword" />
						</div>

						<button type="submit" class="btn btn-light btn-block waves-effect waves-light">Sign Up</button>
						<div style="color: red;" asp-validation-summary="All"></div>
					</form>
				</div>
			</div>
			<div class="card-footer text-center py-3">
				<p class="text-warning mb-0">Already have an account? <a asp-action="Login" > Sign In here</a></p>
			</div>
		</div>

		<!--Start Back To Top Button-->
		<a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
		<!--End Back To Top Button-->
		<!--start color switcher-->
		<div class="right-sidebar">
			<div class="switcher-icon">
				<i class="zmdi zmdi-settings zmdi-hc-spin"></i>
			</div>
			<div class="right-sidebar-content">

				<p class="mb-0">Gaussion Texture</p>
				<hr>

				<ul class="switcher">
					<li id="theme1"></li>
					<li id="theme2"></li>
					<li id="theme3"></li>
					<li id="theme4"></li>
					<li id="theme5"></li>
					<li id="theme6"></li>
				</ul>

				<p class="mb-0">Gradient Background</p>
				<hr>

				<ul class="switcher">
					<li id="theme7"></li>
					<li id="theme8"></li>
					<li id="theme9"></li>
					<li id="theme10"></li>
					<li id="theme11"></li>
					<li id="theme12"></li>
					<li id="theme13"></li>
					<li id="theme14"></li>
					<li id="theme15"></li>
				</ul>

			</div>
		</div>
		<!--end color switcher-->

	</div><!--wrapper-->
	<!-- Bootstrap core JavaScript-->
	<script src="~/assets/js/jquery.min.js"></script>
	<script src="~/assets/js/popper.min.js"></script>
	<script src="~/assets/js/bootstrap.min.js"></script>

	<!-- sidebar-menu js -->
	<script src="~/assets/js/sidebar-menu.js"></script>

	<!-- Custom scripts -->
	<script src="~/assets/js/app-script.js"></script>

</body>
</html>